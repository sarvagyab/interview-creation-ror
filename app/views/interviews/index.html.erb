
<h1> <%= pluralize(@interviews.count,"Interview") %></h1>

<div id="page">
    <% if flash[:alert] %>
      <p class="flash-error"><%= flash[:alert] %></p>
    <% end %>
    <% if flash[:notice] %>
      <p class="flash-notice"><%= flash[:notice] %></p>
    <% end %>
    <% if flash[:errors] %>
      <% flash[:errors].each do |err| %>
      <p class='flash-errors'><%= err %></p>
      <% end %>
    <% end %>
</div>

<%= link_to "Create New Interview", new_interview_path %> | 
<%= link_to "List Users", users_path %> 

<%= render @interviews %>